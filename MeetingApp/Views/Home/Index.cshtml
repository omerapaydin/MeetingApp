@model Meetinginfo 
@{ ViewBag.Title = "Toplantı Başvuru"; }
<main class="text-center">
  <h1 class="h4">@ViewBag.Selamlama</h1>
  <h2>Toplantı katılım durumunuzu bildiriniz.</h2>
  <div class="card my-2">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">@Model.Location</li>
      <li class="list-group-item">
        @Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde olacak.
      </li>
      <li class="list-group-item">@Model.NumberOfPeople Katılımcı</li>
    </ul>
  </div>
  <a
    class="btn btn-sm btn-outline-primary"
    asp-controller="Meeting"
    asp-action="Apply"
    >Başvuru Yap</a>
</main>
